@using DisplayMonkey
@using DisplayMonkey.Models
@using DisplayMonkey.Language

@model DisplayMonkey.Models.Youtube

<fieldset>
    <legend>@Resources.YouTube</legend>

    <table class="divTable"><tr>
        <td>
    <div class="divTable">
    <div class="divRow">
    <div class="display-label">
         @Resources.Canvas
    </div>
    <div class="display-field">
        @Html.ActionLink(Model.Frame.Panel.Canvas.Name, "Details", "Canvas", new { id=Model.Frame.Panel.CanvasId }, null)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Resources.Panel
    </div>
    <div class="display-field">
        @Html.ActionLink(Model.Frame.Panel.Name, "Details", "Panel", new { id=Model.Frame.PanelId }, null)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Frame.Duration)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Frame.Duration) @Resources.Sec
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.YoutubeId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.YoutubeId)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Volume)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Volume)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.AutoLoop)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.AutoLoop)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Aspect)
    </div>
    <div class="display-field">
        @Model.Aspect.Translate()
    </div>
    </div>
    </div>

        </td>

        <td>
            <div id="picture">
                <div id="ytplayer"></div>
            </div>
        </td>

    </tr></table>
</fieldset>


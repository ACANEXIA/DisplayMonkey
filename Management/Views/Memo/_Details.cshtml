@using DisplayMonkey.Language

@model DisplayMonkey.Models.Memo

<fieldset>
    <legend>@Resources.Memo</legend>

    <div class="divTable">
    <div class="divRow">
    <div class="display-label">
         @Resources.Canvas
    </div>
    <div class="display-field">
        @Html.ActionLink(Model.Frame.Panel.Canvas.Name, "Details", "Canvas", new { id=Model.Frame.Panel.CanvasId }, null)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Resources.Panel
    </div>
    <div class="display-field">
        @Html.ActionLink(Model.Frame.Panel.Name, "Details", "Panel", new { id=Model.Frame.PanelId }, null)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Frame.Duration)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Frame.Duration) @Resources.Sec
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Subject)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Subject)
    </div>
    </div>

    <div class="divRow">
    <div class="display-label">
         @Html.DisplayNameFor(model => model.Body)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Body)
    </div>
    </div>
    </div>
</fieldset>


@model DisplayMonkey.Models.Picture

@{
    ViewBag.Title = "Create new picture frame";
    SelectList pictures = ViewBag.Pictures as SelectList;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Picture</legend>

        @Html.Partial("_frameData", Model.Frame)
        @Html.Partial("_Edit", Model)
        
        <div class="editor-label">
            @Html.LabelFor(model => model.SavedContentId)
        </div>
        <div class="editor-field select">
            @Html.DropDownListFor(model => model.SavedContentId, pictures, "- Upload new picture -")
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("View frames", "Index", "Frame")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

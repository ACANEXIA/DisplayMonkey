@using DisplayMonkey.Language

@model DisplayMonkey.Models.Video

@{
    ViewBag.Title = Resources.EditVideoFrame;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.Video</legend>

        @Html.Partial("_frameData", Model.Frame)
        @Html.Partial("_Edit", Model)

        <p>
            <input type="submit" value="@Resources.Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.ViewFrames, "Index", "Frame")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

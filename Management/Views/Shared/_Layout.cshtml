@using DisplayMonkey.Language

@{
    string appPath = Request.ApplicationPath;
    string path = Request.Path;
    if (appPath != "/")
    {
        path = path.Replace(appPath, "");
    }
    string help = Url.Content("~/help" + path);
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Display Monkey</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Html.MetaAcceptLanguage()
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/css", "~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderSection("scripts", required: false)
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink(Resources.DisplayMonkey, "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                       Hello, <span class="username">@User.Identity.Name</span>!
                    </section>
                    <nav>
                        <ul class="menu">
                            <li>@Html.ActionLink(Resources.Home, "Index", "Home")</li>
                            <li>@Html.ActionLink(Resources.CurrentlyDisplayed, "Index", "Display")</li>
                            <li>@Html.ActionLink(Resources.ChangeDisplayed, "Index", "Frame")</li>
                            <li><a href="#">Media</a>
                                <ul>
                                    <li>@Html.ActionLink(Resources.ViewUploadedMedia, "Index", "Media")</li>
                                    <li>@Html.ActionLink(Resources.UploadMedia, "Upload", "Media")</li>
                                </ul>
                            </li>
                            <li><a href="#">@Resources.Setup</a>
                                <ul>
                                    <li><a href="#">@Resources.Organization</a>
                                        <ul>
                                            <li>@Html.ActionLink(Resources.Levels, "Index", "Level")</li>
                                            <li>@Html.ActionLink(Resources.Locations, "Index", "Location")</li>
                                        </ul>
                                    </li>
                                    <li>@Html.ActionLink(Resources.Canvases, "Index", "Canvas")</li>
                                    <li>@Html.ActionLink(Resources.Panels, "Index", "Panel")</li>
                                    <li><a href="#">@Resources.Other</a>
                                        <ul>
                                            <li>@Html.ActionLink(Resources.ApplicationSettings, "Index", "Setting")</li>
                                            <li>@Html.ActionLink(Resources.ReportServerAccounts, "Index", "ReportServer")</li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <li><a href="@help" onclick="window.open('@help','Help','width=640,height=480,resizable=1,scrollbars=1'); return false;" target="_blank">Help</a></li>
                            <li><a href="http://www.fuel9.com/home/about-us/">About</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Fuel9.com</p>
                </div>
            </div>
        </footer>

        <script type="text/javascript">
                $(document).ready(function () {
                    $('.menu').jqsimplemenu();
                    var culture = $("meta[name='culture']").attr("content");
                    $.datepicker.setDefaults($.datepicker.regional[culture]);
                    $('input[type=datetime]').datepicker();
                });
        </script>
    </body>
</html>

@using DisplayMonkey.Language

@model DisplayMonkey.Models.Display

@{
    ViewBag.Title = Resources.AddDisplay;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.Display</legend>

        @Html.Partial("_Edit")

        <p>
            <input type="submit" value="@Resources.Add" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.ViewDisplays, "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model DisplayMonkey.Models.Content

@{
    ViewBag.Title = "Upload new media";
    string supportedImages = string.Join(", ", DisplayMonkey.Models.Picture.SupportedFormats);
    string supportedVideo = string.Join(", ", DisplayMonkey.Models.Video.SupportedFormats);
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Upload", "Media", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Media</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Data)
        </div>
        <div class="editor-field">
            <input type="file" name="files" id="files" multiple="" />
            @Html.ValidationMessageFor(model => Model.Data)
            <p>Supported media formats include: @supportedImages for images and @supportedVideo for video. All other content will be ignored.</p>
            <p>Note: when browsing push and hold [Shift] or [Ctrl] key to select multiple files.</p>
        </div>

        <p>
            <input type="submit" value="Upload" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Media list", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
